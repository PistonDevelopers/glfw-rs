VPATH=%VPATH%

RUSTC ?= rustc
RUSTFLAGS ?=

RUST_SRC = \
	$(addprefix src/,\
		consts.rs \
		ffi.rs \
		private.rs)

.PHONY: all
all: libglfwrs.dummy

libglfwrs.dummy: src/glfw.rs $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) -L ../glfw $< --out-dir .
	touch $@

.PHONY: check
check:

.PHONY: clean
clean:
	rm -f *.o *.a *.so *.dylib *.dll *.dummy *-test
